{
  "name": "uuv-vscode-extension",
  "displayName": "UUV E2E Tests",
  "version": "1.26.0",
  "description": "VS Code extension for UUV end-to-end tests",
  "license": "MIT",
  "icon": "uuv.png",
  "homepage": "https://e2e-test-quest.github.io/uuv/",
  "repository": {
    "type": "git",
    "url": "https://github.com/e2e-test-quest/uuv"
  },
  "author": "Louis Fredice NJAKO MOLOM (https://github.com/luifr10) & Stanley SERVICAL (https://github.com/stanlee974)",
  "engines": {
    "vscode": "^1.90.0"
  },
  "publisher": "e2e-test-quest",
  "categories": [
    "Testing"
  ],
  "keywords": [
    "uuv",
    "e2e",
    "end2end",
    "end 2 end",
    "test",
    "testing",
    "accessibility",
    "accessibilite",
    "a11y",
    "cypress",
    "playwright",
    "testing-library",
    "cucumber",
    "gherkin",
    "bdd",
    "tdd",
    "acceptance"
  ],
  "activationEvents": [
    "workspaceContains:uuv/**/*.feature"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "uuv.open",
        "title": "UUV Open"
      },
      {
        "command": "uuv.assistant",
        "title": "UUV Assistant"
      }
    ],
    "configuration": {
      "title": "UUV E2E Tests",
      "properties": {
        "uuv.projectHomeDir": {
          "type": "string",
          "default": ".",
          "description": "Must be the directory(relative to workspace) containing the package.json where the uuv dependency is installed"
        },
        "uuv.useLocalScript": {
          "type": "boolean",
          "default": false,
          "description": "Check this box if for some reason you are unable to run npx scripts from your ide"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "nx build vscode-extension",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "vsce-package": "npx vsce package --no-dependencies",
    "publish": "npx vsce publish --no-dependencies"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "20.x",
    "@types/vscode": "^1.90.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.4.0",
    "@vscode/vsce": "^3.0.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@cucumber/gherkin": "^32.0.0",
    "@cucumber/messages": "^27.0.0",
    "@types/node-ipc": "^9.2.3",
    "@uuv/runner-commons": "2.57.0",
    "node-ipc": "^12.0.0"
  }
}
